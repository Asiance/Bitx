{
  "manifest_version": 2,
  "default_locale": "en",

  "name": "basecampExtension",
  "description": "Connect to a Basecamp account and display all Todos",
  "version": "1.0",
  "icons": { "16": "/img/icon.png",
             "48": "/img/icon.png",
            "128": "/img/icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "css/*",
    "img/*",
    "js/*",
    "lib/*",
    "views/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.google.com/basecamp-crx*"],
      "js": ["js/injection.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html"  
}